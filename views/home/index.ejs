<div style="float:left; width:600px;" class="container">
  <header>
    <h1>Score List</h1>
  </header>
  <hr/>
  <% if (info = req.flash("info")) { %>
  <div>
    <%= info %>
  </div>
  <% } %>
  <% posts.forEach(function(post, index) { %>
  <article>
    <h2><%= post.title %></h2>
    <div class="content">
      <%= post.content %>
    </div>
    <div class="link">
      <a href="/post/get/<%=post.id%>">link to <%=post.title%></a>
    </div>
  </article>
  <hr>
  <% }); %>
</div>

